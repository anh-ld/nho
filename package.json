{
  "name": "nho",
  "version": "0.2.1",
  "description": "1KB Web Component Abstraction",
  "keywords": ["nho", "web component"],
  "repository": {
    "type": "git",
    "url": "https://github.com/anh-ld/nho.git"
  },
  "author": {
    "name": "Anh Le",
    "email": "ledzanh@gmail.com"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.es.js",
      "default": "./dist/index.umd.js"
    },
    "./dist/": "./dist/"
  },
  "main": "./dist/index.umd.js",
  "files": ["dist", "src", "*.md"],
  "scripts": {
    "build": "bun run build:module && bun run build:umd && bun run size",
    "build:module": "bun build src/index.js --target=browser --format=esm --outdir=dist --entry-naming=index.es.js --minify",
    "build:umd": "bun build src/index.js --target=browser --format=iife --outdir=dist --entry-naming=index.umd.js --minify",
    "size": "for f in dist/index.{es,umd}.js; do [ -f \"$f\" ] && { case \"$f\" in *.es.js) l=esm;; *.umd.js) l=umd;; esac; echo \"$l size: $(wc -c <\"$f\")\"; echo \"$l gzip: $(gzip -c \"$f\" | wc -c)\"; }; done",
    "build:example": "bun build example/main.js --target=browser --format=esm --outdir=example/dist --entry-naming=main.js --sourcemap",
    "coverage": "bun test --coverage",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "dev": "bun run build:example --watch",
    "serve": "bunx serve example",
    "postinstall": "bunx simple-git-hooks",
    "release": "bunx release-it",
    "check": "bunx @biomejs/biome check --write .",
    "clean": "rm -rf dist example/dist"
  },
  "simple-git-hooks": {
    "pre-commit": "bun test && bun run check && git add ."
  },
  "npmConfig": {
    "save-exact": true
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@testing-library/jest-dom": "6.4.6",
    "@testing-library/user-event": "14.5.2",
    "jsdom": "22.1.0",
    "release-it": "16.3.0",
    "serve": "14.2.5",
    "simple-git-hooks": "2.11.1"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
