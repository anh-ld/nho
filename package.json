{
  "name": "nho",
  "version": "0.1.3",
  "description": "1KB Web Component Abstraction",
  "keywords": [
    "nho",
    "web component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anh-ld/nho.git"
  },
  "author": {
    "name": "Anh Le",
    "email": "ledzanh@gmail.com"
  },
  "type": "module",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.es.js",
      "default": "./dist/index.umd.js"
    },
    "./dist/": "./dist/"
  },
  "main": "./dist/index.umd.js",
  "files": [
    "dist",
    "src",
    "*.md"
  ],
  "scripts": {
    "build": "vite build --mode=lib",
    "build:example": "vite build --mode=example",
    "check": "npx @biomejs/biome check --apply .",
    "clean": "rm -rf dist example/dist",
    "dev": "vite",
    "postinstall": "simple-git-hooks",
    "release": "release-it",
    "test": "vitest"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run check && git add .",
    "commit-msg": "npx @n6ai/verify-commit-msg@latest $1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.3.3",
    "@n6ai/verify-commit-msg": "^1.2.0",
    "@testing-library/jest-dom": "^6.1.4",
    "happy-dom": "^12.10.3",
    "jsdom": "^22.1.0",
    "release-it": "^16.2.1",
    "simple-git-hooks": "^2.9.0",
    "vite": "^4.4.5",
    "vitest": "^0.34.6"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  },
  "dependencies": {
    "@testing-library/user-event": "^14.5.1"
  }
}
